<?xml version="1.0"?>
<launch>
    <group ns="laser">
        <include file="$(find tj2_rplidar)/launch/tj2_rplidar.launch">
            <arg name="serial_port" value="/dev/serial/by-id/usb-Silicon_Labs_CP2102_USB_to_UART_Bridge_Controller_0001-if00-port0"/>
            <!-- <arg name="serial_port" value="/dev/serial/by-path/platform-3610000.xhci-usb-0:2.2:1.0-port0"/> -->
            <arg name="lidar_node_name" value="diffyjr_rplidar"/>
            <arg name="laser_frame_id" value="laser"/>
        </include>

        <node pkg="laser_filters" type="scan_to_scan_filter_chain" name="laser_filter">
            <rosparam command="load" file="$(find tj2_rplidar)/config/laser_filter.yaml" />
        </node>
    </group>
</launch>
