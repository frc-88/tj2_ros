<?xml version="1.0"?>
<launch>
    <group ns="test_laser">
        <include file="$(find tj2_rplidar)/launch/tj2_rplidar_a3.launch">
            <arg name="serial_port" value="/dev/serial/by-path/platform-3610000.xhci-usb-0:2.3.4:1.0-port0"/>
            <arg name="lidar_node_name" value="test_rplidar"/>
            <arg name="laser_frame_id" value="test_laser"/>
        </include>

        <node pkg="laser_filters" type="scan_to_scan_filter_chain" name="laser_filter">
            <rosparam command="load" file="$(find tj2_rplidar)/config/laser_filter.yaml" />
        </node>
    </group>
    <node pkg="tf" type="static_transform_publisher" name="base_footprint_to_test_laser" args="0 0 0   0 0 1 0 base_footprint test_laser 20" />
</launch>
