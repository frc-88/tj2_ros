<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="publish_odom_tf" default="true"/>
    <!-- <arg name="robot_address" default="10.0.88.2"/> -->
    <arg name="robot_address" default="localhost:5800"/>

    <group ns="tj2">
        <node name="tj2_networktables_py" pkg="tj2_networktables" type="tj2_networktables_node.py" output="screen" required="false">
            <rosparam file="$(find tj2_networktables)/config/diffyjr_watchers.yaml" command="load" ns=""/>
            <!-- <rosparam file="$(find tj2_networktables)/config/2022_robot_watchers.yaml" command="load" ns=""/> -->
            <param name="nt_host" value="$(arg robot_address)"/>
        </node>

        <node name="tj2_networktables" pkg="tj2_networktables" type="tj2_networktables" output="screen" required="false">
            <rosparam file="$(find tj2_networktables)/config/diffyjr_networktables.yaml" command="load"/>
            <rosparam param="joint_names" file="$(find tj2_description)/config/diffyjr_joints.yaml" command="load"/>
            <param name="nt_port" value="5800"/>
            <param name="publish_odom_tf" value="$(arg publish_odom_tf)"/>
        </node>
    </group>

    <include file="$(find tj2_tunnel)/launch/twist_mux.launch"/>
</launch>
