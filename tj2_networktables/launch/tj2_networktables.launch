<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="publish_odom_tf" default="true"/>
    <arg name="robot_address" default="10.0.88.2"/>
    <!-- <arg name="robot_address" default="localhost"/> -->

    <group ns="tj2">
        <node name="tj2_networktables" pkg="tj2_networktables" type="tj2_networktables_node.py" output="screen" required="true">
            <rosparam file="$(find tj2_networktables)/config/diffyjr_watchers.yaml" command="load" ns=""/>
            <param name="nt_host" value="$(arg robot_address)"/>
            <param name="publish_odom_tf" value="$(arg publish_odom_tf)"/>
            <param name="cmd_vel_timeout" value="2.0"/>
            <remap from="limelight/camera_info" to="/limelight/color/camera_info" />
        </node>
    </group>
</launch>
