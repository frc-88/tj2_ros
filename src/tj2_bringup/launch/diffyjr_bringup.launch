        <arg name="map_name" value="$(arg map_name)" />
        <arg name="laser_scan_topic" value="$(arg laser_scan_topic)" />
        <arg name="gmapping_config" value="$(find tj2_bringup)/config/$(arg robot)/gmapping.yaml" />
