<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <!-- the name of this robot -->
    <arg name="robot" default="$(env ROBOT)" />

    <!-- RoboRIO networktables address -->
    <arg name="robot_address" default="10.0.88.2" />

    <!-- Laser localization map name -->
    <arg name="map_name" default="$(env ROS_MAP_NAME)" />

    <!-- Enable onboard Jetson driver station -->
    <arg name="enable_driver_station" value="true" />

    <!-- Neural net model -->
    <arg name="yolo_class_names" value="$(find tj2_yolo)/models/crescendo_2024.names" />
    <arg name="yolo_model_path" value="$(find tj2_yolo)/models/crescendo_2024-03-22.torchscript" />

    <!-- Laser topic -->
    <arg name="laser_scan_topic" value="/laser/scan_filtered" />

    
    <!-- Formats topics so they are usable going to and coming from the RoboRIO -->
    <include file="$(find tj2_comm)/launch/tj2_comm.launch">
        <arg name="publish_odom_tf" value="true" />
        <arg name="compact_tf_ids_path"
            value="$(find tj2_bringup)/config/$(arg robot)/frame_ids.yaml" />
    </include>

    <!-- Mux autonomous and teleop joystick commands -->
    <include file="$(find tj2_comm)/launch/twist_mux.launch" />
    <group ns="tj2">
        <include file="$(find ros_networktables_bridge_host)/launch/nt_client.launch">
            <arg name="nt_host" value="$(arg robot_address)" />
        </include>
    </group>

    <!-- Static transforms defining robot layout -->
    <include file="$(find tj2_bringup)/config/$(arg robot)/static_transforms_$(arg robot).launch" />

    <!-- Detect robot tilt -->
    <include file="$(find tj2_description)/launch/imu_joint.launch">
        <arg name="camera_imu_topic" value="/tj2_zed/imu/data" />
        <arg name="base_imu_topic" value="/tj2/imu" />
    </include>

    <!-- Robot URDF -->
    <include file="$(find tj2_description)/launch/tj2_description.launch">
        <arg name="model" value="$(find tj2_description)/urdf/$(arg robot).urdf.xml" />
        <arg name="joint_names" value="$(find tj2_bringup)/config/$(arg robot)/joints.yaml" />
    </include>

    <!-- ZED 2 camera -->
    <!-- <include file="$(find tj2_camera)/launch/tj2_zed2.launch">
        <arg name="serial_number" value="25556416" />
    </include> -->
    <include file="$(find tj2_camera)/launch/zed_request_camera.launch">
        <arg name="serial_number"           value="25556416" />
    </include>

    <!-- YOLO neural net -->
    <include file="$(find tj2_yolo)/launch/tj2_yolo.launch">
        <arg name="yolo_model_path"           value="$(arg yolo_model_path)" />
        <arg name="yolo_class_names_path"     value="$(arg yolo_class_names)" />    
    </include>

    <!-- Bag recorder -->
    <include file="$(find tj2_match_watcher)/launch/tj2_match_watcher.launch" />

    <!-- LIDAR driver -->
    <group ns="laser">
        <include file="$(find tj2_rplidar)/launch/tj2_rplidar_a2.launch">
            <arg name="serial_port"
                value="/dev/serial/by-id/usb-Silicon_Labs_CP2102_USB_to_UART_Bridge_Controller_0001-if00-port0" />
            <arg name="lidar_node_name" value="$(arg robot)_rplidar" />
            <arg name="laser_frame_id" value="laser" />
        </include>

        <node pkg="laser_filters" type="scan_to_scan_filter_chain" name="laser_filter">
            <rosparam command="load"
                file="$(find tj2_bringup)/config/$(arg robot)/laser_filter.yaml" />
        </node>
    </group>

    <!-- Driver station and joystick -->
    <include if="$(arg enable_driver_station)"
        file="$(find tj2_driver_station)/launch/tj2_driver_station.launch" />
    <include if="$(arg enable_driver_station)"
        file="$(find tj2_debug_joystick)/launch/tj2_debug_joystick.launch" />

