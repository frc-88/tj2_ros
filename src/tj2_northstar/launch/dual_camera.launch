<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="common_camera_params" default="$(find tj2_bringup)/config/diffyjr/northstar/ov2311.yaml"/>

    <arg name="camera_0_info_url" default="package://tj2_bringup/config/diffyjr/northstar/calibration/camera_0.yaml"/>
    <arg name="serial_0" default="UC621"/>
    <arg name="name_0" default="camera_0"/>

    <arg name="camera_1_info_url" default="package://tj2_bringup/config/diffyjr/northstar/calibration/camera_1.yaml"/>
    <arg name="serial_1" default="UC622"/>
    <arg name="name_1" default="camera_1"/>

    <node pkg="tj2_northstar" type="uvc_camera_node" name="arducams">
        <rosparam command="load" file="$(arg common_camera_params)" ns="$(name_0)"/>
        <param name="cameras/$(name_0)/capture/serial" value="$(arg serial_0)"/>
        <param name="cameras/$(name_0)/frame_id" value="optical_$(arg serial_0)"/>
        <param name="info_urls/$(name_0)" value="$(arg camera_0_info_url)"/>

        <rosparam command="load" file="$(arg common_camera_params)" ns="$(name_1)"/>
        <param name="cameras/$(name_1)/capture/serial" value="$(arg serial_1)"/>
        <param name="cameras/$(name_1)/frame_id" value="optical_$(arg serial_1)"/>
        <param name="info_urls/$(name_1)" value="$(arg camera_1_info_url)"/>
    </node>
</launch>
