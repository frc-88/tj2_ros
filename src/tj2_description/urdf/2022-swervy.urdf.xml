<robot name="2022-robot">
    <material name="climber_arm_color">
        <color rgba="0.32 0.53 0.75 1"/>
    </material>

    <material name="hook_color">
        <color rgba="0.54 0.68 0.84 1"/>
    </material>

    <material name="intake_color">
        <color rgba="1.0 0.75 0.06 1"/>
    </material>

    <material name="chassis_color">
        <color rgba="0.97 0.53 0.0 1"/>
    </material>

    <material name="turret_color">
        <color rgba="0.87 0.32 0.16 1"/>
    </material>

    <material name="wheel_color">
        <color rgba="0.1 0.1 0.9 1"/>
    </material>

    <!-- Link definitions -->

    <link name="base_tilt_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://tj2_description/meshes/2022_swervy/chassis.stl"/>
            </geometry>
            <material name="chassis_color"/>
        </visual>
    </link>

    <link name="turret_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://tj2_description/meshes/2022_swervy/turret.stl"/>
            </geometry>
            <material name="turret_color"/>
        </visual>
    </link>
    <link name="turret_tilt_link">
    </link>

    <link name="intake_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://tj2_description/meshes/2022_swervy/intake.stl"/>
            </geometry>
            <material name="intake_color"/>
        </visual>
    </link>
    <link name="intake_tilt_link">
    </link>

    <!-- Climber links -->

    <link name="left_outer_climber_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://tj2_description/meshes/2022_swervy/climber.stl"/>
            </geometry>
            <material name="climber_arm_color"/>
        </visual>
    </link>
    <link name="left_outer_climber_tilt_link">
    </link>

    <link name="left_inner_climber_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://tj2_description/meshes/2022_swervy/climber.stl"/>
            </geometry>
            <material name="climber_arm_color"/>
        </visual>
    </link>
    <link name="left_inner_climber_tilt_link">
    </link>

    <link name="right_outer_climber_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://tj2_description/meshes/2022_swervy/climber.stl"/>
            </geometry>
            <material name="climber_arm_color"/>
        </visual>
    </link>
    <link name="right_outer_climber_tilt_link">
    </link>

    <link name="right_inner_climber_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://tj2_description/meshes/2022_swervy/climber.stl"/>
            </geometry>
            <material name="climber_arm_color"/>
        </visual>
    </link>
    <link name="right_inner_climber_tilt_link">
    </link>

    <!-- Hook links -->

    <link name="left_outer_hook_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://tj2_description/meshes/2022_swervy/hook.stl"/>
            </geometry>
            <material name="hook_color"/>
        </visual>
    </link>

    <link name="left_inner_hook_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://tj2_description/meshes/2022_swervy/hook.stl"/>
            </geometry>
            <material name="hook_color"/>
        </visual>
    </link>

    <link name="right_outer_hook_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://tj2_description/meshes/2022_swervy/hook.stl"/>
            </geometry>
            <material name="hook_color"/>
        </visual>
    </link>

    <link name="right_inner_hook_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://tj2_description/meshes/2022_swervy/hook.stl"/>
            </geometry>
            <material name="hook_color"/>
        </visual>
    </link>

    <!-- Swerve wheels -->

    <link name="swerve_wheel_0">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://tj2_description/meshes/2022_swervy/wheel.stl"/>
            </geometry>
            <material name="wheel_color"/>
        </visual>
    </link>

    <link name="swerve_wheel_1">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://tj2_description/meshes/2022_swervy/wheel.stl"/>
            </geometry>
            <material name="wheel_color"/>
        </visual>
    </link>

    <link name="swerve_wheel_2">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://tj2_description/meshes/2022_swervy/wheel.stl"/>
            </geometry>
            <material name="wheel_color"/>
        </visual>
    </link>

    <link name="swerve_wheel_3">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://tj2_description/meshes/2022_swervy/wheel.stl"/>
            </geometry>
            <material name="wheel_color"/>
        </visual>
    </link>


    <!-- Joint definitions -->

    <!-- Climber tilt joints -->

    <joint name="base_link_to_left_outer_climber_tilt" type="fixed">
        <parent link="base_tilt_link"/>
        <child link="left_outer_climber_tilt_link"/>
        <origin xyz="-0.050456  0.301687  0.333312"/>
    </joint>

    <joint name="base_link_to_left_inner_climber_tilt" type="fixed">
        <parent link="base_tilt_link"/>
        <child link="left_inner_climber_tilt_link"/>
        <origin xyz="-0.050456  0.228662  0.333312"/>
    </joint>
    
    <joint name="base_link_to_right_outer_climber_tilt" type="fixed">
        <parent link="base_tilt_link"/>
        <child link="right_outer_climber_tilt_link"/>
        <origin xyz="-0.050456  -0.301687  0.333312"/>
    </joint>

    <joint name="base_link_to_right_inner_climber_tilt" type="fixed">
        <parent link="base_tilt_link"/>
        <child link="right_inner_climber_tilt_link"/>
        <origin xyz="-0.050456  -0.228662  0.333312"/>
    </joint>

    <!-- Climber joints -->
    
    <joint name="left_outer_climber_joint" type="continuous">
        <parent link="left_outer_climber_tilt_link"/>
        <child link="left_outer_climber_link"/>
        <origin xyz="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <joint name="left_inner_climber_joint" type="continuous">
        <parent link="left_inner_climber_tilt_link"/>
        <child link="left_inner_climber_link"/>
        <origin xyz="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>
    
    <joint name="right_outer_climber_joint" type="continuous">
        <parent link="right_outer_climber_tilt_link"/>
        <child link="right_outer_climber_link"/>
        <origin xyz="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <joint name="right_inner_climber_joint" type="continuous">
        <parent link="right_inner_climber_tilt_link"/>
        <child link="right_inner_climber_link"/>
        <origin xyz="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>
    
    <!-- Hook joints -->

    <joint name="left_outer_climber_hook_joint" type="prismatic">
        <parent link="left_outer_climber_link"/>
        <child link="left_outer_hook_link"/>
        <origin xyz="0.050721  0.0  0.704932"/>
        <axis xyz="0 0 1"/>
        <limit effort="1000.0" lower="0.0" upper="20.0" velocity="0.5"/>
    </joint>

    <joint name="left_inner_climber_hook_joint" type="prismatic">
        <parent link="left_inner_climber_link"/>
        <child link="left_inner_hook_link"/>
        <origin xyz="0.050721  0.0  0.704932"/>
        <axis xyz="0 0 1"/>
        <limit effort="1000.0" lower="0.0" upper="20.0" velocity="0.5"/>
    </joint>
    
    <joint name="right_outer_climber_hook_joint" type="prismatic">
        <parent link="right_outer_climber_link"/>
        <child link="right_outer_hook_link"/>
        <origin xyz="0.050721  0.0  0.704932"/>
        <axis xyz="0 0 1"/>
        <limit effort="1000.0" lower="0.0" upper="20.0" velocity="0.5"/>
    </joint>

    <joint name="right_inner_climber_hook_joint" type="prismatic">
        <parent link="right_inner_climber_link"/>
        <child link="right_inner_hook_link"/>
        <origin xyz="0.050721  0.0  0.704932"/>
        <axis xyz="0 0 1"/>
        <limit effort="1000.0" lower="0.0" upper="20.0" velocity="0.5"/>
    </joint>
    
    <!-- Intake joints -->

    <joint name="base_link_to_intake_tilt" type="fixed">
        <parent link="base_tilt_link"/>
        <child link="intake_tilt_link"/>
        <origin xyz="0.292256  0.000000  0.223228"/>
    </joint>

    <joint name="intake_joint" type="continuous">
        <parent link="intake_tilt_link"/>
        <child link="intake_link"/>
        <origin xyz="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <!-- Turret joints -->

    <joint name="base_link_to_turret_tilt" type="fixed">
        <parent link="base_tilt_link"/>
        <child link="turret_tilt_link"/>
        <origin xyz="-0.07639  -0.00018  0.63303"/>
    </joint>

    <joint name="turret_joint" type="continuous">
        <parent link="turret_tilt_link"/>
        <child link="turret_link"/>
        <origin xyz="0 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <!-- Wheel joints -->

    <joint name="base_link_to_wheel_0_joint" type="continuous">
        <parent link="base_tilt_link"/>
        <child link="swerve_wheel_0"/>
        <origin xyz="0.28258  0.28892  0.050"/>
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="base_link_to_wheel_1_joint" type="continuous">
        <parent link="base_tilt_link"/>
        <child link="swerve_wheel_1"/>
        <origin xyz="-0.28258  0.28892  0.050"/>
        <axis xyz="0 0 1"/>
    </joint>
    
    <joint name="base_link_to_wheel_2_joint" type="continuous">
        <parent link="base_tilt_link"/>
        <child link="swerve_wheel_2"/>
        <origin xyz="-0.28258  -0.28892  0.050"/>
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="base_link_to_wheel_3_joint" type="continuous">
        <parent link="base_tilt_link"/>
        <child link="swerve_wheel_3"/>
        <origin xyz="0.28258  -0.28892  0.050"/>
        <axis xyz="0 0 1"/>
    </joint>
</robot>
