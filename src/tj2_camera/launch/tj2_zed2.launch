<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="yolo_model_path" default="$(find tj2_yolo)/models/powercell_2021.torchscript" />
    <arg name="yolo_class_names_path" default="$(find tj2_yolo)/models/powercell_2021.names" />
    <arg name="pos_tracking_enabled" default="false" />
    <arg name="camera_name" default="zed2" />
    <arg name="serial_number" default="0" />
    <arg name="svo_file" default="" />
    <arg name="depth_quality" default="1" />
    <!-- ROS URDF description of the ZED -->
    <group>
        <param name="$(arg camera_name)_description"
            command="$(find xacro)/xacro '$(find zed_wrapper)/urdf/zed_descr.urdf.xacro'
                        camera_name:=$(arg camera_name)
                        camera_model:=zed2
                        base_frame:=camera_link
                        cam_pos_x:=0
                        cam_pos_y:=0
                        cam_pos_z:=0
                        cam_roll:=0
                        cam_pitch:=0
                        cam_yaw:=0"
        />

        <node name="$(arg camera_name)_state_publisher" pkg="robot_state_publisher"
            type="robot_state_publisher" output="screen" required="false">
            <remap from="robot_description" to="$(arg camera_name)_description" />
            <remap from="joint_states" to="zed_joint_states" />
        </node>
    </group>

    <node name="tj2_zed" pkg="zed_wrapper" type="zed_wrapper_node" output="screen" required="false"
        respawn="true">
        <rosparam file="$(find tj2_camera)/config/zed2.yaml" command="load" />

        <param name="general/camera_name" value="$(arg camera_name)" />
        <param if="$(eval pos_tracking_enabled)" name="general/base_frame" value="zed_handheld" />
        <param unless="$(eval pos_tracking_enabled)" name="general/base_frame" value="camera_link" />
        <param name="general/serial_number" value="$(arg serial_number)" />
        <param name="general/camera_name" value="$(arg camera_name)" />
        <param name="depth/quality" value="$(arg depth_quality)" />
        <param name="pos_tracking/pos_tracking_enabled" value="$(arg pos_tracking_enabled)" />
        <param name="pos_tracking/publish_tf" value="$(arg pos_tracking_enabled)" />
        <param name="pos_tracking/publish_map_tf" value="$(arg pos_tracking_enabled)" />
        <param name="pos_tracking/area_memory" value="$(arg pos_tracking_enabled)" />
        <param name="pos_tracking/mapping_enabled" value="$(arg pos_tracking_enabled)" />
        <param name="yolo_object_detection/model_path" value="$(arg yolo_model_path)" />
        <param name="yolo_object_detection/class_names_path" value="$(arg yolo_class_names_path)" />
    </node>
</launch>